----------------------------------------------------------------------------------------------
----------------------------------------------------------------------------------------------
get -> /friend-request
    /friend-requests/:id                --->    /friend-request/get/all/:id    
    /friend-request/:id/:username       --->    /friend-request/send/:id/:username
    /accept-request/:id/:username       --->    /friend-request/accept/:id/:username
    /cancel-request/:id/:username       --->    /friend-request/cancel/:id/:username
    /reject-request/:id/:username       --->    /friend-request/reject/:id/:username
-----------------------------------------------------------------------------------------------
-----------------------------------------------------------------------------------------------
get -> check
    /check-add/:id/:username            --->    /check/add/:id/:username
    /check-remove/:id/:username         --->    /check/remove/:id/:username
    /check-request/:id/:username        --->    /check/request/:id/:username
-----------------------------------------------------------------------------------------------
-----------------------------------------------------------------------------------------------
get -> friend
    /friends/:id                        --->    /friend/get/all/:id
    -------------------------------------------------------------------------------------------
delete -> friend
    /friend/:id/:username               --->    /friend/:id/:username
-----------------------------------------------------------------------------------------------
------------------------------------------------------------------------------------------------
get --> user
    /all-friends/:id                    --->    /user/all/:id
    /user/:id                           --->    /user/:id
    --------------------------------------------------------------------------------------------
put --> user
    /user                               --->    /user
    --------------------------------------------------------------------------------------------
post --> user
    /user                               --->    /user/login
-------------------------------------------------------------------------------------------------
-------------------------------------------------------------------------------------------------
get --> message
    /seen/:id/:username                 --->    /message/seen/:id/:username
    /messages/:id                       --->    /message/get/all/:id
    ---------------------------------------------------------------------------------------------
post --> message
    /message/:id                        --->    /message/:id
--------------------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------